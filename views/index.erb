<!DOCTYPE html>
<html lang="en" ng-app="todoApp">
<head>
    <meta charset="UTF-8">
    <title>Tasks</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <style>
        .done {
            text-decoration: line-through;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div ng-controller="TaskList" class="col-lg-12">
                <h1>Tasks</h1>
                <ul class="list-unstyled">
                    <li ng-class="{ done: task.done }" ng-repeat="task in tasks">
                      <input ng-checked="task.done" ng-click="updateTask(task)"type="checkbox">
                      {{ task.description }}
                    </li>
                </ul>
                <input type="text" ng-model="description">
                <button ng-click="addTask()" >Add</button>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.5/angular.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.5/angular-resource.min.js"></script>

    <!-- App -->
    <script type="text/javascript" src="js/app.js"></script>

    <!-- Controllers -->
    <script type="text/javascript" src="js/controllers/controllers.js"></script>
    
    <!-- Services -->
    <script type="text/javascript" src="js/services/services.js"></script>
</body>
</html>
